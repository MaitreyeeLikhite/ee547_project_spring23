<!-- recuser.ejs -->
<html>
<head>
  <title>PAYMENTS PAGE</title>
  <link rel="stylesheet" type="text/css" href="style_sheets/recuser.css">
</head>
<body>
<!-- Display the current sum of the payment history -->
<h2>Current Balance: <%= balance %></h2>

<!-- Add the form for recording a payment -->
<form method="POST" action="/record-payment">
  <label for="paymentType">Type of Payment:</label>
  <input type="text" id="paymentType" name="paymentType" required>

  <label for="amount">Amount:</label>
  <input type="number" step="0.01" id="amount" name="amount" required>

  <input type="submit" value="Record Payment">
</form>
<form method="POST" action="/user-logout">
    <button type="submit">Logout</button>
  </form>
</body>
</html>
